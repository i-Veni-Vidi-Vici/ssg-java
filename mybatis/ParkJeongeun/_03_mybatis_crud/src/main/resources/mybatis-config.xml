<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <!-- mapper.xml에서 실제 클래스이름 대신 별칭 사용 가능 -->
    <typeAliases>
        <!-- 아래와 같이 작성가능하지만 일일이 작성해야함 -->
<!--        <typeAlias type="com.sh.menu.model.dto.MenuDto" alias="menuDto"</typeAliases>-->

        <!-- 지정한 패키지 하위의 모든 클래스를 소문자로 시작하는 별칭으로 등록 -->
        <package name="com.sh"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/menudb"/>
                <property name="username" value="sh"/>
                <property name="password" value="sh"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="sql/menu/menu-mapper.xml"/>
        <mapper resource="sql/order/order-mapper.xml"/>
    </mappers>
</configuration>