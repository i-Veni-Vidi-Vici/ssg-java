<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sh._03_spring_crud.menu.model.dao.MenuMapper">
    <resultMap id="menuDtoMap" type="menuDto">
        <id column="menu_code" property="menuCode"/>
        <result column="menu_name" property="menuName"/>
        <result column="menu_price" property="menuPrice"/>
        <result column="category_code" property="categoryCode"/>
        <result column="orderable_status" property="orderableStatus"/>
    </resultMap>

    <resultMap id="menuDtoMap2" type="menuDto2">
        <id column="menu_code" property="menuCode"/>
        <result column="menu_name" property="menuName"/>
        <result column="menu_price" property="menuPrice"/>
        <result column="category_code" property="categoryCode"/>
        <result column="orderable_status" property="orderableStatus"/>
        <result column="category_name" property="categoryName"/>
    </resultMap>

    <select id="findAll" resultMap="menuDtoMap">
        select
            *
        from
            tbl_menu
        where
            orderable_status = 'Y'
        order by
            menu_code
    </select>

    <select id="findAll2" resultMap="menuDtoMap2">
        select menu_code, menu_name,menu_price, ca.category_code, orderable_status, category_name
        from tbl_menu tm left join tbl_category ca on tm.category_code = ca.category_code
        where orderable_status='Y';
    </select>

    <select id="findByMenuCode" resultMap="menuDtoMap">
        select
            *
        from
            tbl_menu
        where
            orderable_status = 'Y'
            and menu_code = #{menuCode}
    </select>

    <select id="findByCategoryCode" resultMap="menuDtoMap">
        select
            *
        from
            tbl_menu
        where
            orderable_status = 'Y'
            and category_code = #{categoryCode}
    </select>

    <insert id="insertMenu" useGeneratedKeys="true" keyProperty="menuCode">
        insert into
            tbl_menu (menu_name, menu_price, category_code, orderable_status)
        values(
            #{menuName}, #{menuPrice}, #{categoryCode}, #{orderableStatus}
        )
    </insert>

<!--    coumn-property 매칭이 자동으로 안되는 경우-->
<!--    별도의 type-handling이 필요한 경우-->
<!--    -->
    <resultMap id="categoryDtoMap" type="categoryDto">

    </resultMap>

    <select id="findAllCategory">
        select
            *
        from
            tbl_category
        where
            ref_category_code is not null
    </select>
</mapper>