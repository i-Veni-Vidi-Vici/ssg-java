<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sh.menu.model.dao.MenuMapper">
    <select id="findAll" resultType="menuDto">
        select
        *
        from
        tbl_menu
        order by menu_code
    </select>
    <select id="findByMenuCode" resultType="menuDto">
        select
        *
        from
        tbl_menu
        where
        menu_code = #{menuCode} <!-- 괄호 안에는 넘어온 자바코드 작성 -->
    </select>
    <select id="findByCategoryCode" resultType="menuDto">
        select
        *
        from
        tbl_menu
        where
        category_code = #{categoryCode}
    </select>

    <!-- 작성한 속성명은 필드이름이 아님, private 필드여서 직접 접근 불가 -->
    <!-- getter의 get을 제외하고, 소문자로 시작하는 이름을 작성한 것(실제로는 getter 사용한 것) -->
    <!-- property 접근 방식. (OGNL 표준) -->
    <!-- useGeneratedKeys=true를 통해 auto-increment값을 가져옴 -->
    <!-- keyProperty : 전달된 객체를 menuDto#menuCode에 대입 -->
    <insert id="insertMenu" useGeneratedKeys="true" keyProperty="menuCode">
        insert into
        tbl_menu
        values(
        null, #{menuName}, #{menuPrice}, #{categoryCode}, #{orderableStatus}
        )
    </insert>
    <update id="updateMenu">
        update
        tbl_menu
        set
        menu_name = #{menuName}
        menu_price = #{menuPrice}
        category_code = #{categoryCode}
        orderable_status = #{orderableStatus}
        where
        menu_code = #{menuCode}
    </update>
    <delete id="deleteMenu">
        delete from
        tbl_menu
        where
        menu_code = #{menuCode}
    </delete>
</mapper>