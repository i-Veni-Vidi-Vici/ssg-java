<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias type="com.oopssinsa.model.dto.IbDto" alias="ibDto"></typeAlias>
        <typeAlias type="com.oopssinsa.model.dto.ObDto" alias="obDto"></typeAlias>
        <typeAlias type="com.oopssinsa.model.dto.IbInstructionDto" alias="ibInstructionDto"></typeAlias>
<!--        <typeAlias type="com.oopssinsa.model.dto.ob.ObRequestDto" alias="obRequestDto"></typeAlias>-->
        <typeAlias type="com.oopssinsa.model.dto.ObInstructionDto" alias="obInstructionDto"></typeAlias>
        <typeAlias type="com.oopssinsa.model.dto.ProductDto" alias="productDto"></typeAlias>
        <typeAlias type="com.oopssinsa.model.dto.SectionDto" alias="sectionDto"></typeAlias>
        <typeAlias type="com.oopssinsa.model.dto.StockDto" alias="stockDto"></typeAlias>
        <typeAlias type="com.oopssinsa.model.dto.StockHistoryDto" alias="stockHistoryDto"></typeAlias>
        <typeAlias type="com.oopssinsa.model.dto.SubLocationDto" alias="subLocationDto"></typeAlias>
        <typeAlias type="com.oopssinsa.model.dto.LoginDto" alias="loginDto"></typeAlias>
        <!--        지정한 패키지 하위의 모든 클래스를 소문자로 시작하는 별칭으로 등록한다. -->
        <package name="com.oopssinsa"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
<!--                <property name="url" value="jdbc:mysql://mysql.coffit.today/osswmsdb"/>-->
<!--                <property name="url" value="jdbc:mysql://localhost:3306/osswmsdb"/>-->
                <property name="url" value="jdbc:mysql://techbrew4.iptime.org:3306/osswmsdb"/>
                <property name="username" value="oops"/>
                <property name="password" value="oops"/>
<!--                <property name="username" value="root"/>-->
<!--                <property name="password" value="mysql"/>-->
<!--                <property name="username" value="sh"/>-->
<!--                <property name="password" value="sh"/>-->
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="sql/worker/ob-mapper.xml"/>
        <mapper resource="sql/worker/location-mapper.xml"/>
        <mapper resource="sql/worker/ib-mapper.xml"/>
        <mapper resource="sql/worker/login-mapper.xml"/>
        <mapper resource="sql/worker/stock-mapper.xml"/>
    </mappers>
</configuration>